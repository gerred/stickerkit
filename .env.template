# ComfyUI Hackathon Environment Configuration

# ComfyUI Server Settings
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188
GPU_MODE=auto  # auto, cpu, cuda

# Model Paths
MODELS_DIR=./models
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Kubernetes Configuration
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=comfyui-hackathon

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# API Keys (if needed for cloud services)
# HUGGINGFACE_TOKEN=your_token_here
# CIVITAI_API_KEY=your_key_here

# Performance Settings
BATCH_SIZE=1
MAX_MEMORY_GB=8
VRAM_MANAGEMENT=auto  # auto, low_vram, normal_vram, high_vram

# Extra ComfyUI Arguments
# COMFYUI_EXTRA_ARGS=--disable-auto-launch --enable-cors-header

# Workflow Settings
DEFAULT_STEPS=4
DEFAULT_CFG=1.0
DEFAULT_WIDTH=1024
DEFAULT_HEIGHT=1024

# Development Tools
JUPYTER_PORT=8889
TENSORBOARD_PORT=6006

# Model Download Settings
DOWNLOAD_RETRIES=3
DOWNLOAD_TIMEOUT=3600

# Custom Nodes Configuration
AUTO_INSTALL_NODES=true
CUSTOM_NODES_DIR=./ComfyUI/custom_nodes
